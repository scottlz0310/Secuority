{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>scottlz0310/renovate-config//presets/default",
    "github>scottlz0310/renovate-config//presets/languages/python",
    "github>scottlz0310/renovate-config//presets/tools/precommit",
    "github>scottlz0310/renovate-config//presets/options/automerge",
    "github>scottlz0310/renovate-config//presets/options/security"
  ],
  "packageRules": [
    {
      "description": "Disable rich upgrades until semgrep relaxes rich~=13.5.2 constraint",
      "matchPackageNames": [
        "rich"
      ],
      "matchManagers": [
        "pep621",
        "uv"
      ],
      "enabled": false
    },
    {
      "description": "Disable sphinx major upgrades until myst-parser supports sphinx>=9",
      "matchPackageNames": [
        "sphinx"
      ],
      "matchManagers": [
        "pep621",
        "uv"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "description": "Disable semgrep upgrades while LGPL-2.1 is blocked by dependency-review",
      "matchPackageNames": [
        "semgrep"
      ],
      "matchManagers": [
        "pep621",
        "uv"
      ],
      "enabled": false
    }
  ]
}
